<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="model">
<!-- 班级信息的印射表，包括班级名称，专业，教室，班主任，班长，人数等信息 -->
	 <class name="StudentClass" table="class">
       <id	name="id" type="int" column="id">
			<generator class="identity"/>
		</id>
		<property name="className"/>
		<property name="sum"/>
		<property name="classroom"/>
		<property name="major"/>
		<property name="teacher"/>
		<property name="monitor"/>
		<property name="monitorTel"/>
		<!-- 这是一个班级，一个课程可以有多个班级，一个班级也可以有多个课程。所以此处是多对多的关系 -->
		 <set name="courses"  lazy="false" cascade="all">
            <key column="id"/>
            <many-to-many class="model.Cource" column="id"/>
        </set>
	</class>
</hibernate-mapping>
